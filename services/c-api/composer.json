{
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "LSE\\Services\\CApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LSE\\Services\\CApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php ../../tools/copy_shared.php"
    ],
    "post-update-cmd": [
      "php ../../tools/copy_shared.php"
    ],
    "test": "vendor/bin/phpunit"
  },
  "config": {
    "platform-check": false
  }
}
